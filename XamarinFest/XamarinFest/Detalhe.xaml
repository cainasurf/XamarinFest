<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinFest.Detalhe"
             Title="{Binding Titulo}">
    <StackLayout>
        <!--<Label Text="{Binding Titulo}" FontSize="Large"/>-->
        <Label Text="{Binding DataPublicacao}" />
        <Label Text="{Binding Conteudo}" FontSize="Medium"/>
        
        <Button Text="Abrir noticia" x:Name="BtnSite" Clicked="BtnSite_Clicked"/>
    </StackLayout>
</ContentPage>